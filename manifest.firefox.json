{
  "manifest_version": 3,
  "name": "FokusFlow",
  "version": "0.2.0",
  "description": "Offline Pomodoro timer with tasks & subtasks. Coffee cup visualization. Local-only storage.",
  "action": {
    "default_title": "FokusFlow",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["shared/ext.js", "background.js"]
  },
  "permissions": ["storage", "alarms"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
